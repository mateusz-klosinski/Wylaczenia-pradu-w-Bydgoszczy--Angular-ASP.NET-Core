@model Enea.ViewModels.LoginViewModel

@{
    Layout = "_LoginLayout";
}

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



    <form method="post" novalidate>
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label asp-for="UserName">Nazwa użytkownika</label>
            <input type="text" asp-for="UserName" class="form-control" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Hasło</label>
            <input type="password" asp-for="Password" class="form-control" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Zaloguj się" class="btn btn-success" />
            <a asp-action="Register" asp-controller="Auth" class="btn btn-info">Rejestracja</a>
        </div>
    </form>
